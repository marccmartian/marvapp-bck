enum Role {
    USER
    ADMIN
}

model User {
    id        String    @id @default(uuid())
    name      String
    surname   String
    email     String    @unique
    password  String
    role      Role      @default(USER)
    avatar    String?
    status    Boolean   @default(true)
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    
    projects  Project[]
}
